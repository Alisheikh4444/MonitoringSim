<Window x:Class="MonitoringSim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitoringSim"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="BorderBrush" Value="#3b4252"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Monitoring Simulator" FontSize="20" FontWeight="Bold"
                   Foreground="#e5e7eb" Margin="8,0,8,4"/>

        <!-- Device 1 -->
        <Border Grid.Row="1" Grid.Column="0"
                CornerRadius="10" Background="#111827"
                BorderBrush="#3b4252" BorderThickness="1"
                Padding="12" Margin="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="دما سنج ( هشدار 30..70)"
                           Foreground="#e5e7eb" FontWeight="SemiBold" Margin="0,0,0,6"/>
                <local:Sparkline x:Name="Spark1" Grid.Row="1" MinY="0" MaxY="100"
                                 Capacity="240" Height="140">
                    <local:Sparkline.LineBrush>
                        <SolidColorBrush Color="#60A5FA"/>
                    </local:Sparkline.LineBrush>
                </local:Sparkline>
                <Grid Grid.Row="2" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="LblD1" FontSize="24" FontWeight="Bold"
                               Foreground="#e5e7eb" Text="—"/>
                    <Border x:Name="Status1" Grid.Column="1" CornerRadius="8" Padding="8,4"
                            Margin="12,0,0,0" Background="#10B981">
                        <TextBlock x:Name="StatusText1" Text="OK" Foreground="White"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Device 2 -->
        <Border Grid.Row="1" Grid.Column="1"
                CornerRadius="10" Background="#111827"
                BorderBrush="#3b4252" BorderThickness="1"
                Padding="12" Margin="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="سرعت ( هشدار 450..750)"
                           Foreground="#e5e7eb" FontWeight="SemiBold" Margin="0,0,0,6"/>
                <local:Sparkline x:Name="Spark2" Grid.Row="1" MinY="200" MaxY="900"
                                 Capacity="240" Height="140">
                    <local:Sparkline.LineBrush>
                        <SolidColorBrush Color="#F59E0B"/>
                    </local:Sparkline.LineBrush>
                </local:Sparkline>
                <Grid Grid.Row="2" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="LblD2" FontSize="24" FontWeight="Bold"
                               Foreground="#e5e7eb" Text="—"/>
                    <Border x:Name="Status2" Grid.Column="1" CornerRadius="8" Padding="8,4"
                            Margin="12,0,0,0" Background="#10B981">
                        <TextBlock x:Name="StatusText2" Text="OK" Foreground="White"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
